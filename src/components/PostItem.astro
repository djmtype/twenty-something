---
import "@/styles/utilities/link-block.css"
import { makeExcerpt, makePlainText } from "@/utils/textConverter"
import { Image } from "astro:assets"
import FormattedDate from "@/components/FormattedDate.astro"
import { getEntry, type CollectionEntry } from "astro:content"

import Taxonomy from "@/components/Taxonomy.astro"



type Props = {
  post: CollectionEntry<"postCollection">
  hideImage?: boolean
  class?: string
  style?: any
  index?: number
} 

const { post, index, hideImage, class: className, ...restProps } = Astro.props

const {
  author,
  title,
  date,
  description,
  customExcerpt,
  thumbnail,
  thumbnailAlt = "",
  categories,
} = post.data

const { data: authorData } = await getEntry("authorCollection", author.slug)

const postBody = post.body

const plainText = await makePlainText(postBody)
---

<div class:list={['post-card', className]} style={{ ...restProps.style }} {...restProps}>
  {
    thumbnail && !hideImage && (
      <figure class="post-card__figure">
        <Image
          class="post-card__image"
          src={thumbnail}
          alt={thumbnailAlt}
          loading={index === 0 ? `eager` : `lazy`}
          width={thumbnail.width}
          height={thumbnail.height}
          densities={[1, 2]}
          quality={60}
        />
      </figure>
    )
  }
  <div class="post-card__content">
    <h2>
      <a class="link-block" href={`/${post.slug}`} set:html={title} />
    </h2>

    <p class="post-card__meta">
      <FormattedDate date={date} />
      â€“ by <a href=`/author/${author.slug}`>{authorData.name}</a> in
      <Taxonomy type="category" name={categories[0]} />
    </p>

    <p class="post-card__excerpt">
      {customExcerpt ? description : makeExcerpt(plainText, 30)}
    </p>
  </div>
</div>

<style>
  .post-card {
    container: card / inline-size;
    display: grid;
    align-items: start;
    column-gap: var(--gutter);
    row-gap: var(--size-fluid-3);
    position: relative;
  }



  .post-card :is(p, .post-card__meta) {
    position: relative;
  }

  .post-card:first-child {
    @media (--lg-n-above) {
      grid-column: 1/-1;

      grid-template-columns: repeat(3, minmax(0, 1fr));
      align-items: end;
    }
  }

  @media (--lg-n-above) {
    .post-card:first-child > *:first-child {
      grid-column: span 2;
    }
  }

  .post-card__figure {
    width: 100%;
    height: auto;
  }

  .post-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 1/1;
    overflow: hidden;
    border-radius: var(--radius-3);
  }
  .post-card__content {
    display: grid;
    align-items: baseline;
    row-gap: var(--size-3);
  }
  .post-card__content h2 {
    font-size: var(--font-size-5);
    
  }

  .post-card__content p {
    color: var(--text-2);
    font-size: var(--font-size-1);
  }

  @container card (width >= 600px) {
    .post-card__image {
      aspect-ratio: 2/1.25;
    }


  }
</style>
