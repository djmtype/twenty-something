---
type Props = {
    frame?: boolean
    caption?: string
    containerColumn: 'column-content' | 'column-breakout' | 'column-full'
}

const { frame, caption, containerColumn } = Astro.props
---

<figure class:list={[`prose__figure`, frame ? `frame` : null]} 
style={{
    '--_container-column': containerColumn || 'column-content', 
    borderRadius: frame && containerColumn !== 'column-full' ? 'var(--radius-3)' : '',
  }}>
    <slot />
    <slot name="figcaption"/>
    {caption && (
        <figcaption>{caption}</figcaption>
    )}
</figure>
