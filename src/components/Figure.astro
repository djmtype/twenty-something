---
type Props = {
    frame?: boolean
    caption?: string
    gridColumn: 'content' | 'breakout' | 'full-width'
}

const { frame, caption, gridColumn } = Astro.props
---

<figure class:list={[`prose__figure`, frame ? `frame` : null]} 
style={{
    '--grid-column': gridColumn || 'content', 
    borderRadius: frame && gridColumn !== 'full-width' ? 'var(--radius-3)' : '',
  }}>
    <slot />
    <slot name="figcaption"/>
    {caption && (
        <figcaption>{caption}</figcaption>
    )}
</figure>