---
type Props = {
    frame?: boolean
    caption?: string
    className?: string
    containerColumn: 'column-content' | 'column-breakout' | 'column-full'
}

const { frame, caption, className, containerColumn } = Astro.props
---

<figure class:list={[className, frame ? `figure--frame` : null]} 
style={{
    '--_container-column': containerColumn || 'column-content', 
    borderRadius: frame && containerColumn !== 'column-full' ? 'var(--radius-4)' : '',
  }}>
    <slot />
    <slot name="figcaption"/>
    {caption && (
        <figcaption>{caption}</figcaption>
    )}
</figure>

<style>
      .figure--frame {
    background-color: var(--surface-overlay);
    padding: var(--gutter);
  }
</style>
