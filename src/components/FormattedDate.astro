---
import type { ConfigObj } from "@/types/config.types"
import config from "@/data/config.json"

interface Props {
  date: Date
}

function locale(language: string, country?: string): string {
  // Use a ternary operator to conditionally include the country code with a hyphen
  return country ? `${language}-${country}` : language
}

const { date } = Astro.props

const { 
	language: siteLanguage, 
	country: siteCountry
	}: ConfigObj["site"] = config.site
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(locale(siteLanguage, siteCountry) || "en-US", {
      timeZone: "UTC",
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  }
</time>
