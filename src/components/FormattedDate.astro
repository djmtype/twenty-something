---
import { site } from "@/data/config.json"

interface Props {
	date: Date;

}

function locale(language: string, country?: string): string {
    // Use a ternary operator to conditionally include the country code with a hyphen
    return country ? `${language}-${country}` : language;
}


const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale(site.language, site.country) || 'en-US', {
			timeZone: "UTC",
			year: 'numeric',
			month: 'long',
			day: 'numeric',
		})
	}
</time>
