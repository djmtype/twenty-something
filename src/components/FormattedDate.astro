---
import { site } from "@/data/config.json"

interface Props {
	date: Date;

}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(site.locale || 'en-US', {
			timeZone: "UTC",
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
