---
type Props = {
  maxColumnWidth?: boolean
  style?: string
  className?: string
}
const { className, maxColumnWidth, ...restProps } = Astro.props
---

<div class={`layout-grid${maxColumnWidth ? ' max-column-width' : ''}${className ? ` ${className}` : ''}`} {...restProps}>
  <slot />
</div>


<style>
  .layout-grid {
    --_column: var(--size-content-2);
    --_column-gap: var(--gutter);
    --_row-gap: var(--gutter);
    --_align-items: initial;
    

    display: grid;
    column-gap: var(--_column-gap);
    row-gap: var(--_row-gap);
    align-items: var(--_align-items);
    grid-template-columns: repeat(
      auto-fit,
      minmax(min(100%, var(--_column)), 1fr)
    );
  }
</style>


