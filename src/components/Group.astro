---
type Props = {
    type: 'div' | 'section',
    styles?: string
    class: string
}

const { type = 'div', styles, ...restProps} = Astro.props

let GROUP = `${type}` as any
---

<GROUP class={`group ${restProps.class ? restProps.class : ''}`} style={styles}><slot /></GROUP>


<style>
   .group {
        padding-block-start: var(--_padding-block-start, var(--size-fluid-5));
        padding-block-end: var(--_padding-block-end, var(--size-fluid-5));
    }
</style>