---
type Props = {
  type: "div" | "section"
  style?: string
  className?: string
  container?: boolean
  flow?: boolean
}

const { type = "div", container, flow, className, style, ...restProps } = Astro.props

let GROUP = `${type}` as any
---

<GROUP
  class:list={[`group`, container ? "container" : "", flow ? "flow" : "", className ? className : ""]}
  style={style}
  {...restProps}
>
  <slot />
</GROUP>

<style>
  .group {
    --_size-start: var(--size-fluid-6);
    --_size-end: var(--size-fluid-6);
    --_surface: initial;
    padding-block-start: var(--_size-block, var(--_size-start));
    padding-block-end: var(--_size-block, var(--_size-end));
    background: var(--_surface);
  }
</style>
