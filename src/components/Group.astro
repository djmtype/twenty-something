---
import type { SizeValue, ColorValue } from "@/data/props.types"

type Props = {
  type: "div" | "section"
  class?: string
  hasContainer?: boolean
  hasFlow?: boolean
  surface?: ColorValue
  style?: any
  flowSize?: SizeValue
}

const {
  type = "div",
  class: className,
  hasContainer,
  hasFlow,
  flowSize,
  surface,
  style: restStyles,
  ...restProps
} = Astro.props

let GROUP = `${type}` as any

const styles = {
  ...(flowSize ? { '--_flow': `var(--${flowSize})` } : {}),
  ...(surface ? { '--_surface': `var(--${surface})` } : {}),
}
---

<GROUP
  class:list={[
    `group`,
    hasContainer ? "container" : "",
    hasFlow ? "flow" : "", className
  ]}
  style={{ ...styles, ...restStyles }}
  {...restProps}
>
  <slot />
</GROUP>

<style>
  .group {
    --_surface: initial;
    --_padding-top: var(--size-fluid-6);
    --_padding-bottom: var(--size-fluid-6);
    padding-block-start: var(--_padding, var(--_padding-top));
    padding-block-end: var(--_padding, var(--_padding-bottom));
    background: var(--_surface);
  }
</style>
