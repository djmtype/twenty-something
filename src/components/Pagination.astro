---
import { Icon } from 'astro-icon/components';
// Pagination Props type helpers
export type NumericalString = `${number}`
export type RouteString = string | null | undefined

type Props = {
  firstPage?: RouteString
  previousPage?: RouteString
  nextPage?: RouteString
  lastPage?: RouteString
  currentPage?: string | number
  totalPages?: NumericalString | number
}

const {
  firstPage = '#',
  previousPage = '#',
  nextPage = '#',
  lastPage = '#',
  currentPage = '1',
  totalPages = '12',
} = Astro.props
---

<nav class="pagination" aria-label="Pagination">
  <ul role="list" class="pagination__list">
    <li>
      {
        firstPage ? (
          <a class="btn btn--accent" href={firstPage} aria-label="Go to the first page">
            <Icon name="bx:chevrons-left" />
            
          </a>
        ) : (
          <span class="disabled btn btn--default">
            <Icon name="bx:chevrons-left" />
          </span>
        )
      }
    </li>
    <li>
      {
        previousPage ? (
          <a class="btn btn--accent" href={previousPage} aria-label={`Go back to ${previousPage}`}>
            <Icon name="bx:chevron-left" />
          </a>
        ) : (
          <span class="disabled btn btn--default">
            <Icon name="bx:chevron-left" />
          </span>
        )
      }
    </li>
    <li>
      <span class="pagination__status">Page {currentPage} of {totalPages}</span>
    </li>
    <li>
      {
        nextPage ? (
          <a class="btn btn--accent" href={nextPage} aria-label={`Go to ${nextPage}`}>
            <Icon name="bx:chevron-right" />
          </a>
        ) : (
          <span class="disabled btn btn--default">
            <Icon name="bx:chevron-right" />
          </span>
        )
      }
    </li>
    <li>
      {
        lastPage ? (
          <a class="btn btn--accent" href={lastPage} aria-label="Go to the last page">
           
            <Icon name="bx:chevrons-right" />
          </a>
        ) : (
          <span class="disabled btn btn--default">
            <Icon name="bx:chevrons-right" />
          </span>
        )
      }
    </li>
  </ul>
</nav>

<style is:global>
  
  .pagination .pagination__list {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--size-2);
  }






.pagination .disabled {
  --_bg-hover: var(--_bg); 
  opacity: .7;
  cursor: not-allowed;

}

.pagination [data-icon] {
    width: var(--size-relative-7);
    height: auto;

    
}
.pagination__status {
  padding-inline: var(--size-2);
  font-size: var(--font-size-1);
  color: var(--text-2);
}

</style>

