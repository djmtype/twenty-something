---
import { type CollectionEntry, getEntry, getCollection } from "astro:content"

import BaseLayout from "@/layouts/BaseLayout.astro"
import FormattedDate from "@/components/FormattedDate.astro"
import { Image } from "astro:assets"

type Props = CollectionEntry<"post" | "page">["data"]



const { title, description, date, updatedDate, thumbnail} = Astro.props




---

<BaseLayout title={title} description={description} thumbnail={thumbnail}>
      <article>
 
        <div class="hero-image">
          {
            thumbnail && (
              <Image width={1020} height={510} src={thumbnail} alt="" />
            )
          }
        </div>

        <div class="prose">
          <div class="title">
          
            <div class="date">
              <FormattedDate date={date} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </BaseLayout>
