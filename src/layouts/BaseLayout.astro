---
import "../styles/app.css"
import { site } from "@/data/config.json"
import SkipLink from "@/components/SkipLink.astro"
import Header from "@/components/Header.astro"
import Footer from "@/components/Footer.astro"

type Props = {
  title: string
  description: string
  thumbnail?: any
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site)

const {
  title,
  description,
  thumbnail = site.ogImage,
} = Astro.props
---

<html lang={site.language} class="no-js" x-data="{darkMode: localStorage.getItem('darkMode') || localStorage.setItem('darkMode', 'system')}" x-init="$watch('darkMode', val => localStorage.setItem('darkMode', val))" x-bind:class="{'dark': darkMode === 'dark' || (darkMode === 'system' && window.matchMedia('(prefers-color-scheme: dark)').matches), 'light': darkMode === 'light'}" x-cloak>




  <head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href={site.favicon} />
    <meta name="generator" content={Astro.generator} />


    <!-- <link
      rel="preload"
      href="/fonts/atkinson-regular.woff"
      as="font"
      type="font/woff"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/atkinson-bold.woff"
      as="font"
      type="font/woff"
      crossorigin
    /> -->


    <link rel="canonical" href={canonicalURL} />


    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    {/* Sitemap */}
<link rel="sitemap" href="/sitemap-index.xml" />

{/* RSS auto-discovery */}
<link rel="alternate" type="application/rss+xml" title={site.title} href="/rss.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(thumbnail, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(thumbnail, Astro.url)} />

    <script is:inline>
      document.documentElement.classList.remove("no-js")
      </script>
  </head>

  <body>
    <SkipLink />
    <Header />
    <main>
      
      <slot />
    </main>
    <Footer />
  </body>
</html>




