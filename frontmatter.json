{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "blog",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "required": true,
          "single": true
        },
        {
          "title": "Slug",
          "name": "slug",
          "type": "slug",
          "editable": true,
          "default": "{{slug}}",
          "required": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string",
          "required": true
        },
        {
          "title": "Custom Excerpt",
          "name": "customExcerpt",
          "type": "boolean",
          "description": "Use Description as the excerpt"
        },

        {
          "title": "Date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true,
          "dateFormat": "YYYY-MM-DD",
          "required": true
        },
        {
          "title": "Date Updated",
          "name": "dateUpdated",
          "type": "datetime",
          "isModifiedDate": true
        },
        {
          "title": "Thumbnail",
          "name": "thumbnail",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Thumbnail Alternative Text",
          "name": "thumbnailAlt",
          "type": "string",
          "single": true
        },
        {
          "title": "Thumbnail Size",
          "name": "thumbnailSize",
          "type": "choice",
          "choices": ["", "passage", "content", "breakout", "full"]
        },
        {
          "title": "Thumbnail Credit",
          "name": "thumbnailCredit",
          "type": "string",
          "single": false
        },
        {
          "name": "author",
          "title": "Author",
          "type": "contentRelationship",
          "contentTypeName": "author",
          "contentTypeValue": "slug",
          "required": false
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories",
          "taxonomyLimit": 1
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags",
          "taxonomyLimit": 6
        },
        {
          "title": "Status",
          "name": "status",
          "type": "draft",
          "default": "draft"
        }
      ]
    },
    {
      "name": "page",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "required": true,
          "single": true
        },
        {
          "title": "Slug",
          "name": "slug",
          "type": "slug",
          "editable": true,
          "default": "{{slug}}",
          "required": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string",
          "required": true
        },
        {
          "title": "Date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true,
          "dateFormat": "YYYY-MM-DD",
          "required": true
        },
        {
          "title": "Date Updated",
          "name": "dateUpdated",
          "type": "datetime",
          "isModifiedDate": true
        },
        {
          "title": "Thumbnail",
          "name": "thumbnail",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Thumbnail Alternative Text",
          "name": "thumbnailAlt",
          "type": "string",
          "single": true
        },
        {
          "title": "Thumbnail Size",
          "description": "Default size is programmatically set to content",
          "name": "thumbnailSize",
          "type": "choice",
          "choices": ["", "passage", "content", "breakout", "full"]
        },
        {
          "title": "Status",
          "name": "status",
          "type": "draft",
          "default": "draft"
        }
      ]
    },
    {
      "name": "author",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Name",
          "name": "name",
          "type": "string",
          "default": "{{title}}",
          "required": true,
          "single": true
        },
        {
          "title": "Slug",
          "name": "slug",
          "type": "slug",
          "editable": true,
          "default": "{{slug}}",
          "required": true
        },
        {
          "title": "Website",
          "name": "website",
          "type": "string",
          "single": true
        },
        {
          "title": "Email",
          "name": "email",
          "type": "string",
          "single": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string",
          "required": true
        },
        {
          "title": "Type",
          "name": "type",
          "type": "string",
          "single": true
        },
        {
          "title": "Thumbnail",
          "name": "thumbnail",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Status",
          "name": "status",
          "type": "draft",
          "default": "draft"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.content.draftField": {
    "name": "status",
    "type": "choice",
    "choices": ["draft", "publish"]
  },
  "frontMatter.content.publicFolder": {
    "path": "src/assets/uploads",
    "relative": true
  },
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/postCollection",
      "previewPath": "'/'",
      "contentTypes": ["blog"],
      "filePrefix": null
    },
    {
      "title": "page",
      "path": "[[workspace]]/src/content/pageCollection",
      "previewPath": "'/'",
      "contentTypes": ["page"],
      "filePrefix": null
    },
    {
      "title": "author",
      "path": "[[workspace]]/src/content/authorCollection",
      "previewPath": "'author'",
      "contentTypes": ["author"],
      "filePrefix": null
    }
  ],
  "frontMatter.data.files": [
    {
      "id": "config",
      "title": "Configuration",
      "file": "[[workspace]]/src/data/config.json",
      "fileType": "json",
      "labelField": "name",
      "singleEntry": true,
      "schema": {
        "title": "Configuration",
        "type": "object",
        "properties": {
          "site": {
            "type": "object",
            "title": "Site",
            "required": ["title", "url", "language"],
            "properties": {
              "title": {
                "type": "string",
                "title": "Title"
              },
              "tagline": {
                "type": "string",
                "title": "Tagline"
              },
              "url": {
                "type": "string",
                "title": "URL"
              },
              "description": {
                "type": "string",
                "title": "Description"
              },
              "language": {
                "type": "string",
                "title": "Language"
              },
              "country": {
                "type": "string",
                "title": "Country"
              },
              "favicon": {
                "type": "string",
                "title": "Favicon"
              }
            }
          },
          "metadata": {
            "type": "object",
            "title": "Metadata",
            "required": ["ogImage", "ogImageAlt"],
            "properties": {
              "ogTitle": {
                "type": "string",
                "title": "OpenGraph Title"
              },
              "ogDescription": {
                "type": "string",
                "title": "OpenGraph Description",
                "multiline": true
              },
              "ogImage": {
                "type": "string",
                "title": "OpenGraph Image"
              },
              "ogImageAlt": {
                "type": "string",
                "title": "OpenGraph Image Alt Text"
              }
            }
          },
          "logo": {
            "type": "object",
            "title": "Logo",
            "properties": {
              "image": {
                "type": "string",
                "title": "Image"
              },
              "imageDarkMode": {
                "type": "string",
                "title": "Image for Dark Mode"
              },
              "width": {
                "type": "number",
                "title": "Width"
              },
              "height": {
                "type": "number",
                "title": "Height"
              }
            }
          },
          "home": {
            "type": "object",
            "title": "Home",
            "properties": {
              "blogPageSize": {
                "type": "number",
                "title": "Blog Page Size"
              }
            }
          },
          "blog": {
            "type": "object",
            "title": "Blog",
            "properties": {
              "title": {
                "type": "string",
                "title": "Title"
              },
              "description": {
                "type": "string",
                "title": "Description",
                "multiline": true
              },
              "pageSize": {
                "type": "number",
                "title": "Page Size"
              }
            }
          },
          "footer": {
            "type": "object",
            "title": "Footer",
            "properties": {
              "description": {
                "type": "string",
                "title": "Description",
                "multiline": true
              },
              "copyrightYear": {
                "type": "boolean",
                "title": "Copyright Year"
              },
              "copyrightMessage": {
                "type": "string",
                "title": "Copyright Message"
            
              }
              
            }
          }
        }
      }
    },
    {
      "id": "colophon",
      "title": "Colophon",
      "file": "[[workspace]]/src/data/colophon.json",
      "fileType": "json",
      "labelField": "heading",
      "singleEntry": false,
      "schema": {
        "title": "Colophon",
        "type": "object",
        "properties": {
          "heading": {
            "type": "string",
            "title": "Heading"
          },
          "content": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "title": "Name"
                },
                "url": {
                  "type": "string",
                  "title": "URL"
                },
                "rel": {
                  "type": "string",
                  "title": "Relationship"
                },
                "target": {
                  "type": "string",
                  "title": "Target"
                }
              }
            }
          }
        }
      }
    },
    {
      "id": "navigation",
      "title": "Navigation",
      "file": "[[workspace]]/src/data/navigation.json",
      "fileType": "json",
      "labelField": "name",
      "singleEntry": false,
      "schema": {
        "title": "Navigation",
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "url": {
            "type": "string",
            "title": "URL"
          },
          "target": {
            "type": "string",
            "title": "Target"
          },
          "rel": {
            "type": "string",
            "title": "Relationship"
          },
          "children": {
            "type": "boolean"
          },
          "childItems": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "title": "Name"
                },
                "url": {
                  "type": "string",
                  "title": "URL"
                },
                "target": {
                  "type": "string",
                  "title": "Target"
                },
                "rel": {
                  "type": "string",
                  "title": "Relationship"
                }
              }
            }
          }
        }
      }
    }
  ],
  "frontMatter.content.fmHighlight": false,
  "frontMatter.content.hideFm": false,
  "frontMatter.content.hideFmMessage": "Use the editor panel to make front matter changes",
  "frontMatter.snippets.wrapper.enabled": false,
  "frontMatter.dashboard.openOnStart": false,
  "frontMatter.content.snippets": {
    "Image with Caption": {
      "description": "",
      "openingTags": "{{",
      "closingTags": "}}",
      "body": "<figure>![{{alt}}](../../assets/uploads/{{filename}})<figcaption>{{caption}}</figcaption></figure>",
      "fields": [
        {
          "name": "alt",
          "title": "Alt Text",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "filename",
          "title": "Filename",
          "type": "string",
          "single": true,
          "default": ""
        },
        {
          "name": "caption",
          "title": "Caption",
          "type": "string",
          "single": true,
          "default": ""
        }
      ]
    }
  }
}
