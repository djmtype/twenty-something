{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "slug",
          "name": "slug",
          "type": "slug",
          "editable": true,
          "default": "{{slug}}"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true,
          "dateFormat": "YYYY-MM-DD"
        },
        {
          "title": "thumbnail",
          "name": "thumbnail",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "thumbnail alt text",
          "name": "thumbnailAlt",
          "type": "string"
        },
        {
          "name": "author",
          "type": "contentRelationship",
          "contentTypeName": "author",
          "contentTypeValue": "slug",
          "required": false
        },
        {
          "title": "categories",
          "name": "categories",
          "type": "categories",
          "taxonomyLimit": 1
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags",
          "taxonomyLimit": 6
        },
        {
          "title": "status",
          "name": "status",
          "type": "draft",
          "default": "draft"
        }
      ]
    },
    {
      "name": "author",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "name",
          "name": "name",
          "type": "string",
          "default": "{{title}}",
          "single": true
        },
        {
          "title": "slug",
          "name": "slug",
          "type": "slug",
          "editable": true,
          "default": "{{slug}}"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.content.draftField": {
    "name": "status",
    "type": "choice",
    "choices": [
      "draft",
      "publish"
    ]
  },
  "frontMatter.content.publicFolder": {
    "path": "src/assets/uploads",
    "relative": true
  },
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/postCollection",
      "previewPath": "'/'",
      "contentTypes": [
        "default"
      ],
      "filePrefix": null
    },
    {
      "title": "author",
      "path": "[[workspace]]/src/content/authorCollection",
      "previewPath": "'author'",
      "contentTypes": [
        "author"
      ],
      "filePrefix": null
    }
  ],
  "frontMatter.data.files": [
    {
      "id": "config",
      "title": "Configuration",
      "file": "[[workspace]]/src/data/config.json",
      "fileType": "json",
      "labelField": "name",
      "singleEntry": true,
      "schema": {
        "title": "Configuration",
        "type": "object",
        "properties": {
          "site": {
            "type": "object",
            "title": "Site",
            "required": [
              "title",
              "url",
              "language"
            ],
            "properties": {
              "title": {
                "type": "string",
                "title": "Title"
              },
              "tagline": {
                "type": "string",
                "title": "Tagline"
              },
              "url": {
                "type": "string",
                "title": "URL"
              },
              "description": {
                "type": "string",
                "title": "Description",
                "multiline": true
              },
              "language": {
                "type": "string",
                "title": "Language"
              },
              "country": {
                "type": "string",
                "title": "Country"
              },
              "favicon": {
                "type": "string",
                "title": "Favicon"
              }
            }
          },
          "metadata": {
            "type": "object",
            "title": "Metadata",
            "required": [
              "ogImage",
              "ogImageAlt"
            ],
            "properties": {
              "ogTitle": {
                "type": "string",
                "title": "OpenGraph Title"
              },
              "ogDescription": {
                "type": "string",
                "title": "OpenGraph Description",
                "multiline": true
              },
              "ogImage": {
                "type": "string",
                "title": "OpenGraph Image"
              },
              "ogImageAlt": {
                "type": "string",
                "title": "OpenGraph Image Alt Text"
              }
            }
          },
          "logo": {
            "type": "object",
            "title": "Logo",
            "properties": {
              "image": {
                "type": "string",
                "title": "Image"
              },
              "width": {
                "type": "number",
                "title": "Width"
              },
              "height": {
                "type": "number",
                "title": "Height"
              }
            }
          },

          "blog": {
            "type": "object",
            "title": "Blog",
            "properties": {
              "title": {
                "type": "string",
                "title": "Title"
              },
              "description": {
                "type": "string",
                "title": "Description",
                "multiline": true
              }
            }
          }
        }
      }
    },
    {
      "id": "navigation",
      "title": "Navigation",
      "file": "[[workspace]]/src/data/navigation.json",
      "fileType": "json",
      "labelField": "name",
      "singleEntry": false,
      "schema": {
        "title": "Navigation",
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "url": {
            "type": "string",
            "title": "URL"
          },
          "target": {
            "type": "string",
            "title": "Target"
          },
          "rel": {
            "type": "string",
            "title": "Relationship"
          },
          "children": {
            "type": "boolean"
          },
          "childItems": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "title": "Name"
                },
                "url": {
                  "type": "string",
                  "title": "URL"
                },
                "target": {
                  "type": "string",
                  "title": "Target"
                },
                "rel": {
                  "type": "string",
                  "title": "Relationship"
                }
              }
            }
          }
        }
      }
    }
  ],
  "frontMatter.content.fmHighlight": false,
  "frontMatter.content.hideFm": false,
  "frontMatter.content.hideFmMessage": "Use the editor panel to make front matter changes",
  "frontMatter.dashboard.openOnStart": false
}